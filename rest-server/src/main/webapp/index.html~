<script>
    const API_BASE = window.location.origin + '/rest-server';
    const API_USERS = API_BASE + '/api/utilisateurs';
    const API_LOGIN = API_USERS  + '/api/login';

    let currentUser = null;

    function showTab(tabName) {
        document.querySelectorAll('.tab').forEach(tab => tab.classList.remove('active'));
        document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));

        event.target.classList.add('active');
        document.getElementById(tabName + '-tab').classList.add('active');

        if (tabName === 'users') loadUsers();
        if (tabName === 'biens') checkBiensAccess();
    }

    function showMessage(elementId, message, type) {
        const el = document.getElementById(elementId);
        el.innerHTML = `<div class="alert alert-${type}">${message}</div>`;
        setTimeout(() => el.innerHTML = '', 5000);
    }

    async function register() {
        const user = {
            nom: document.getElementById('register-nom').value,
            email: document.getElementById('register-email').value,
            password: document.getElementById('register-password').value,
            role: document.getElementById('register-role').value
        };

        if (!user.nom || !user.email || !user.password) {
            showMessage('register-message', 'Veuillez remplir tous les champs', 'error');
            return;
        }

        try {
            const response = await fetch(API_USERS, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(user)
            });

            if (response.ok) {
                const data = await response.json();
                showMessage('register-message',
                    `‚úÖ Inscription r√©ussie ! Votre ID: ${data.id}. Vous pouvez maintenant vous connecter.`,
                    'success');

                document.getElementById('register-nom').value = '';
                document.getElementById('register-email').value = '';
                document.getElementById('register-password').value = '';

                setTimeout(() => showTab('login'), 2000);
            } else {
                showMessage('register-message', '‚ùå Erreur lors de l\'inscription', 'error');
            }
        } catch (error) {
            showMessage('register-message', '‚ùå Erreur: ' + error.message, 'error');
        }
    }

    async function login() {
        const credentials = {
            email: document.getElementById('login-email').value,
            password: document.getElementById('login-password').value
        };

        if (!credentials.email || !credentials.password) {
            showMessage('login-message', 'Veuillez remplir tous les champs', 'error');
            return;
        }

        try {
            const response = await fetch(API_LOGIN, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(credentials)
            });

            if (response.ok) {
                currentUser = await response.json();
                showMessage('login-message',
                    `‚úÖ Bienvenue ${currentUser.nom} !`,
                    'success');

                document.getElementById('currentUser').classList.add('show');
                document.getElementById('userName').textContent = currentUser.nom;
                document.getElementById('userRole').textContent = currentUser.role;
                document.getElementById('userRole').className = 'badge badge-' + currentUser.role;

                document.getElementById('login-email').value = '';
                document.getElementById('login-password').value = '';

                setTimeout(() => showTab('biens'), 1500);
            } else {
                showMessage('login-message', '‚ùå Email ou mot de passe incorrect', 'error');
            }
        } catch (error) {
            showMessage('login-message', '‚ùå Erreur: ' + error.message, 'error');
        }
    }

    function logout() {
        currentUser = null;
        document.getElementById('currentUser').classList.remove('show');
        showTab('login');
    }

    async function loadUsers() {
        const listEl = document.getElementById('users-list');
        const statsEl = document.getElementById('users-stats');

        listEl.innerHTML = '<div class="loading"><div class="spinner"></div><p>Chargement...</p></div>';

        try {
            const response = await fetch(API_USERS);
            const users = await response.json();

            if (users.length === 0) {
                listEl.innerHTML = '<div class="empty-state"><p>Aucun utilisateur inscrit</p></div>';
                return;
            }

            const agents = users.filter(u => u.role === 'agent').length;
            const acheteurs = users.filter(u => u.role === 'acheteur').length;

            statsEl.innerHTML = `
                <div class="stat-card">
                    <h2>${users.length}</h2>
                    <p>Total utilisateurs</p>
                </div>
                <div class="stat-card">
                    <h2>${agents}</h2>
                    <p>Agents</p>
                </div>
                <div class="stat-card">
                    <h2>${acheteurs}</h2>
                    <p>Acheteurs</p>
                </div>
            `;

            let html = '';
            users.forEach(user => {
                html += `
                    <div class="card">
                        <h3>${user.nom} <span class="badge badge-${user.role}">${user.role}</span></h3>
                        <p>üìß ${user.email}</p>
                        <p>üÜî ID: ${user.id}</p>
                    </div>
                `;
            });

            listEl.innerHTML = html;
        } catch (error) {
            listEl.innerHTML = `<div class="alert alert-error">‚ùå Erreur: ${error.message}</div>`;
        }
    }

    function checkBiensAccess() {
        if (currentUser && currentUser.role === 'agent') {
            document.getElementById('add-bien-form').style.display = 'block';
        } else {
            document.getElementById('add-bien-form').style.display = 'none';
        }
    }

    function loadBiens() {
        showMessage('biens-message', '‚ÑπÔ∏è Fonctionnalit√© CORBA - N√©cessite le serveur CORBA actif', 'success');
    }

    function addBien() {
        showMessage('biens-message', '‚ÑπÔ∏è Fonctionnalit√© CORBA - N√©cessite le serveur CORBA actif', 'success');
    }

    // Chargement initial
    window.addEventListener('load', () => {
        console.log('Application charg√©e');
    });
</script>
</body>
