<div class="container">
    <div class="header">
        <h1>üè† Syst√®me Immobilier Distribu√©</h1>
        <p>Gestion compl√®te de biens immobiliers - REST, CORBA & SOAP</p>
    </div>

    <div id="currentUser">
        <strong>Connect√© en tant que:</strong> <span id="userName"></span>
        <span id="userRole" class="badge"></span>
        <button class="btn btn-secondary" onclick="logout()" style="float: right;">D√©connexion</button>
    </div>

    <div class="main-content">
        <div class="tabs">
            <div class="tab active" onclick="showTab('login')">üîê Connexion</div>
            <div class="tab" onclick="showTab('register')">üìù Inscription</div>
            <div class="tab" onclick="showTab('users')">üë• Utilisateurs</div>
            <div class="tab" onclick="showTab('biens')">üè° Biens</div>
        </div>

        <!-- Tab Connexion -->
        <div id="login-tab" class="tab-content active">
